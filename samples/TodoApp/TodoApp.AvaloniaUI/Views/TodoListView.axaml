<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="850"
             x:Class="TodoApp.AvaloniaUI.Views.TodoListView">
	<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" RowDefinitions="Auto,*,Auto">
		<StackPanel Background="#0078d4">
			<Label Padding="16" Foreground="White"
				HorizontalContentAlignment="Center" 
				FontSize="24">TodoApp for AvaloniaUI</Label>
		</StackPanel>
		
		<ItemsControl Grid.Row="1" Items="{Binding Items}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<CheckBox Margin="6" IsChecked="{Binding IsComplete}" Content="{Binding Title}"/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>

		<Grid Grid.Row="2" Margin="4" ColumnDefinitions="*,Auto,Auto">
			<TextBox
				HorizontalAlignment="Stretch"
				Margin="4"
				AcceptsReturn="True"
				Text="{Binding AddItemTitle}"
				Watermark="What do you want to do?" />

			<Button Grid.Column="1">+</Button>
		</Grid>
	</Grid>
</UserControl>
