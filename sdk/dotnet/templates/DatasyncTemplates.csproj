<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <PackageType>Template</PackageType>
        <PackageId>Microsoft.AspNetCore.Datasync.Template.CSharp</PackageId>
        <PackageProjectUrl>https://github.com/Azure/azure-mobile-apps</PackageProjectUrl>
        <Authors>Microsoft</Authors>
        <Company>Microsoft</Company>
        <LicenseUrl>https://github.com/Azure/azure-mobile-apps/blob/main/LICENSE.txt</LicenseUrl>
        <ProjectUrl>https://github.com/azure/azure-mobile-apps</ProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Title>ASP.NET Core Datasync Templates</Title>
        <Description>Templates to use when creating ASP.NET Core datasync applications.</Description>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <PackageTags>dotnet-new;templates;aspnetcore;datasync</PackageTags>
        <RepositoryUrl>https://github.com/Azure/azure-mobile-apps</RepositoryUrl>
        <TargetFramework>net5</TargetFramework>
        <IncludeContentInPack>true</IncludeContentInPack>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <ContentTargetFolders>content</ContentTargetFolders>
    </PropertyGroup>
    <ItemGroup>
        <Content Include="Template.DatasyncServer\**" Exclude="Template.DatasyncServer\**\*.template" />
        <Compile Remove="**\*" />
    </ItemGroup>
</Project>
