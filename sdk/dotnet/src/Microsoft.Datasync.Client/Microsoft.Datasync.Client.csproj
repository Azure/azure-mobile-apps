<Project Sdk="MSBuild.Sdk.Extras/3.0.23">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;monoandroid11.0;xamarin.ios10</TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">$(TargetFrameworks);uap10.0</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <LicenseUrl>https://github.com/Azure/azure-mobile-apps/blob/main/LICENSE.txt</LicenseUrl>
    <Company>Microsoft</Company>
    <Authors>Microsoft</Authors>
    <Description>A client package for communicating with a Microsoft Datasync service.  Formally known as Azure Mobile Apps</Description>
    <Product>$(AssemblyName) ($(TargetFramework))</Product>
    <Copyright>&#169; Microsoft Corporation. All rights reserved.</Copyright>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/azure/azure-mobile-apps</PackageProjectUrl>
    <PackageIcon>icon.png</PackageIcon>
    <RepositoryUrl>https://github.com/azure/azure-mobile-apps</RepositoryUrl>
    <PackageTags>azure;mobile;datasync;microsoft</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <DebugType>portable</DebugType>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <LangVersion>9.0</LangVersion>
    <NeutralLanguage>en-US</NeutralLanguage>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\..\images\icon.png" PackagePath="icon.png" Pack="True" />
    <None Include="Platforms\**\*.cs" />
    <Compile Remove="Platforms\**\*.cs" />
  </ItemGroup>

  <!-- Android Platform Support -->
  <ItemGroup Condition="$(TargetFramework.StartsWith('monoandroid'))">
    <Compile Include="Platforms\android\*.cs" />
    <PackageReference Include="Xamarin.Essentials" Version="1.7.0" />
  </ItemGroup>

  <!-- iOS Platform Support -->
  <ItemGroup Condition="$(TargetFramework.StartsWith('xamarin.ios'))">
    <Compile Include="Platforms\ios\*.cs" />
    <PackageReference Include="Xamarin.Essentials" Version="1.7.0" />
  </ItemGroup>

  <!-- UWP/UAP/Windows Store Platform Support -->
  <PropertyGroup Condition="$(TargetFramework.StartsWith('uap10.0'))">
    <TargetPlatformVersion>10.0.19041.0</TargetPlatformVersion>
    <TargetPlatformMinVersion>10.0.16299.0</TargetPlatformMinVersion>
  </PropertyGroup>
  <ItemGroup Condition="$(TargetFramework.StartsWith('uap10.0'))">
    <Compile Include="Platforms\uap\*.cs" />
  </ItemGroup>

  <!-- .NET Standard 2.1 Platform Support -->
  <ItemGroup Condition="$(TargetFramework.StartsWith('netstandard'))">
    <Compile Include="Platforms\netstandard\*.cs" />
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="5.0.0" />
  </ItemGroup>

  <!-- Common package requirements -->
  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="5.0.2" />
  </ItemGroup>
</Project>
