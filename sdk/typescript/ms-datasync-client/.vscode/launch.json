    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [ 
                "--reporter", "spec" 
            ],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha (SELECTION)",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [ 
                "--grep", "SELECTION",
                "--reporter", "spec" 
            ],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}